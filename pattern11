 import java.util.*;
 class Main
 {
   public static void main(String args[])
   {
 Scanner sc=new Scanner(System.in);
	    int n=sc.nextInt();
	    for(int i=1;i<=n;i++)
	    { 
	        int t=i;
	        for(int j=i;j>=i;j--)
	        {
	            System.out.print(t+" ");
	            t=t+n;
	        }
	        System.out.println();
	    }
      }
      }
	
